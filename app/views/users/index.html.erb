<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <div class="profile-container">
        <p class="notice">
          <%= notice %>
        </p>
        <h2 class="index_profile">User info</h2>
        <p><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "download.jpg", size: "100x100" %></p>
        <table class="table table-striped">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <%=link_to"" ,edit_user_path(current_user.id),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_20224" %>

      </div>
        <h2>New book</h2>
        <% if @book.errors.any? %>
  <p>2errors prohibited this book from being saved:</p>
     <ul>
       <li>Title can't be blank</li>
       <li>Body can't be blank</li>
     </ul>
     <% end %>
      <%= form_for(@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title,class:"col-xs-12" %>
        <h4>Opinion</h4>
        <%= f.text_area :body ,class:"col-xs-12"%>
        <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
      <% end %>
    </div>
    <div class="col-xs-9">
      <table class="table table-striped">


        <h2>Users</h2>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "download.jpg", size: "100x100"%></td>
            <td>
              <%= user.name %>
            </td>
              <td><%=link_to"Show", user_path(user.id) %></td>
            </tr>
          </tbody>
          <% end %>
    </table>
    </div>
  </div>
</div>
