<h1>Editing Book</h1>
<!-- form_for部分 -->
<p id="notice">
 <%=  notice %>
</p>
<% if @book.errors.any? %>
<p>2errors prohibited this book from being saved:</p>
   <ul>
     <li>Title can't be blank</li>
     <li>Body can't be blank</li>
   </ul>
   <% end %>
<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "Show", book_path %>
<%= link_to "Back", books_path %>
